---
// Homepage: data-driven, easy to maintain.
// Place this file at: src/pages/index.astro
import fs from "fs";
import path from "path";

const contentDir = (p) => path.resolve(`./src/content/${p}`);

// Load projects and updates (JSON files are easiest for non-technical edits)
const projects = JSON.parse(fs.readFileSync(contentDir("projects.json"), "utf-8"));
const updates = JSON.parse(fs.readFileSync(contentDir("updates.json"), "utf-8"));

// Helper: latest 3 updates
const latestUpdates = updates.slice(0, 3);
